# =============================================================================
# API Configuration
# =============================================================================
API_V1_STR=/api/v1
PROJECT_NAME="Science Competitions Insight"
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=INFO


# =============================================================================
