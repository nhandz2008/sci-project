# SCI Project Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
DOMAIN=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=sci_db
POSTGRES_USER=sci_user
POSTGRES_PASSWORD=your_secure_password_here
# Note: In development, the database is accessible on port 5433 to avoid conflicts

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000","http://127.0.0.1:8080"]

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_IMAGE_BACKEND=sci-backend
DOCKER_IMAGE_FRONTEND=sci-frontend
TAG=latest

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# AI RECOMMENDATION SETTINGS
# =============================================================================
AI_MODEL_VERSION=1.0
RECOMMENDATION_CACHE_TTL=3600  # 1 hour in seconds

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=
ENABLE_METRICS=false

# =============================================================================
# EMAIL SETTINGS (Optional - for future features)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@sci.com

# =============================================================================
# FIRST SUPERUSER (for initial setup)
# =============================================================================
FIRST_SUPERUSER=admin@sci.com
FIRST_SUPERUSER_PASSWORD=admin123

# =============================================================================
# PRODUCTION SETTINGS (Override these for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# DOMAIN=your-domain.com
# VITE_API_URL=https://api.your-domain.com
# BACKEND_CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"] 